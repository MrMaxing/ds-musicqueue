{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "es2017.string",
            "es2021"
        ],
        "moduleResolution": "Node",
        "module": "CommonJS",
        "outDir": "./",
        "rootDir": "./",
        "sourceMap": false,
        "strict": false
    },
    "typeRoots": [
        "./@types",
        "./node_modules/@types"
    ],
    "exclude": [
        "node_modules"
    ]
}